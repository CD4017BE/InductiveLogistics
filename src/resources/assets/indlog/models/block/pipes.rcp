{
	dependencies = ["pipe"];
	textures = [
		"indlog:block/fluid_tr",
		"indlog:block/fluid_in",
		"indlog:block/fluid_ex",
		"indlog:block/fluid_filter",
		"indlog:block/item_tr",
		"indlog:block/item_in",
		"indlog:block/item_ex",
		"indlog:block/item_filter",
		"indlog:block/warp",
		"indlog:block/blocked_pipe",
		"indlog:block/invcon_b",
		"indlog:block/invcon_c",
		"indlog:block/invcon_l"
	];
	sizes = [4,4,4,0,4,4,4,0,4,0,6,6,6]#;
}

core(t) {
	texIdx(t);
	pipe.core(sizes:t);
}

con(t) {
	texIdx(t);
	pipe.con(sizes:t);
}

conf(t) {
	push();
		texIdx(t);
		pipe.con(4);
	pop();
	if (t >= 4) {texIdx(7);} else {texIdx(3);}
	pipe.filter(8,2);
}

conx(t) {
	push();
		texIdx(t);
		pipe.con(4);
	pop();
	texIdx(9);
	scaleUV(2,2);
	pipe.filter(6,1);
}

item(t) {
	texIdx(t);
	pipe.full(sizes:t);
}